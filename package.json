{
	"name": "@morev/v-bem-transformer",
	"description": "Intuitive and performant BEM in Vue files via pseudo-directive",
	"type": "module",
	"version": "1.2.3",
	"private": false,
	"license": "MIT",
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"author": {
		"name": "Maxim Morev",
		"email": "max.seainside@gmail.com"
	},
	"homepage": "https://github.com/MorevM/v-bem-transformer#readme",
	"repository": {
		"type": "git",
		"url": "https://github.com/MorevM/v-bem-transformer"
	},
	"bugs": {
		"url": "https://github.com/MorevM/v-bem-transformer/issues"
	},
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		},
		"./bundlers": {
			"import": "./dist/bundlers.mjs",
			"require": "./dist/bundlers.cjs"
		},
		"./vue": {
			"import": "./dist/vue.mjs",
			"require": "./dist/vue.cjs"
		},
		"./nuxt": {
			"import": "./dist/nuxt.mjs",
			"require": "./dist/nuxt.cjs"
		},
		"./use-bem-factory": {
			"import": "./dist/use-bem-factory.mjs",
			"require": "./dist/use-bem-factory.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"scripts": {
		"prepare": "lefthook install",
		"lint": "eslint \"**/*.{js,ts,vue,yml,yaml,json,json5,jsonc,md}\"",
		"lint:fix": "yarn lint --fix",
		"test": "vitest",
		"build": "unbuild",
		"release": "release-it --disable-metrics"
	},
	"dependencies": {
		"@morev/more-bem-classnames": "^2.0.0",
		"@morev/utils": "^3.6.0",
		"@nuxt/kit": "3.10.3",
		"magic-string": "^0.30.7",
		"unplugin": "1.7.1"
	},
	"devDependencies": {
		"@morev/commitlint-config": "^0.2.2",
		"@morev/eslint-config": "^29.0.0",
		"@release-it/conventional-changelog": "^8.0.1",
		"@total-typescript/ts-reset": "^0.5.1",
		"@vitest/coverage-v8": "^1.3.1",
		"eslint": "^8.57.0",
		"lefthook": "^1.6.4",
		"release-it": "^17.1.1",
		"typescript": "^5.3.3",
		"unbuild": "^2.0.0",
		"vitest": "^1.3.1",
		"vue": "^3.4.21"
	}
}
